<%= form_for(@message , html: {class: "form-horizontal"}) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="form-group">
  <%= f.label :name, " 名前:", class:"col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :age, " 年齢:", class:"col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :age, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :body, " 内容:", class:"col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_area :body, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-md-offset-2 col-md-10">
  <%= f.submit class: "btn btn-default" %>
  </div>
</div>

<% end %>